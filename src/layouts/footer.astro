---
import { Signature } from "@/components/signature";
import { Button } from "@/components/ui/button";
---

<footer
  class="flex md:h-footer md:max-h-footer border-t border-border/75 items-center justify-between px-6 py-4 md:py-2 max-md:block md:absolute md:bottom-0 w-full"
>
  <div class="flex items-center max-md:justify-center max-md:mb-2 gap-2">
    <span class="max-md:text-sm">Made by</span>
    <div role="img" title="Victor Alves">
      <Signature className="h-8 md:h-10" />
    </div>
  </div>

  <div class="flex items-center max-md:justify-center gap-2 max-md:text-sm">
    <span>Built with</span>
    <a
      href="https://astro.build/"
      target="_blank"
      rel="noreferrer noopener"
      tabindex="-1"
    >
      <Button variant="link" className="p-0 h-fit max-md:text-sm">{Astro.generator}</Button>
    </a>
  </div>
</footer>
