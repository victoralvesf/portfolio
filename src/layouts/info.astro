---
import { GithubIcon, LinkedinIcon, MailIcon } from "lucide-react";
import { SocialLink } from "@/components/social";
import { Avatar } from "@/components/avatar";
import { Image } from "astro:assets";

const socials = [
  {
    href: "https://github.com/victoralvesf",
    label: "Github",
    text: "Github",
    icon: GithubIcon,
  },
  {
    href: "https://linkedin.com/in/victoralvesf",
    label: "LinkedIn",
    text: "LinkedIn",
    icon: LinkedinIcon,
  },
  {
    href: "mailto:contato@victoralvesf.com",
    label: "E-mail",
    text: "Contact me",
    icon: MailIcon,
  },
];
---

<aside
  class="w-full md:w-xs md:min-w-xs max-md:border-b md:border-r border-border/75 md:h-full flex flex-col items-start md:items-center py-6 px-4 md:py-8 md:px-6 gap-4"
>
  <Avatar />

  <div class="flex gap-2 md:gap-4 flex-col">
    <div class="flex gap-2 items-end">
      <Avatar
        className="block md:hidden min-w-fit"
        imageClassName="size-20"
      />

      <div>
        <h2 class="text-xl md:text-3xl font-bold">Victor Alves</h2>
        <p class="text-foreground/70 font-semibold text-base md:text-lg">
          Fullstack Developer
        </p>
      </div>
    </div>

    <div class="text-pretty">
      <p class="text-sm md:text-base">
        I create accessible and high-quality digital experiences for the web.
      </p>
    </div>
  </div>

  <div class="max-md:mr-auto md:mt-auto">
    <div class="flex mt-2 md:mt-4 flex-row" aria-label="Social media">
      {
        socials.map((item, index) => (
          <SocialLink key={index} href={item.href} label={item.label}>
            <item.icon className="size-4 md:size-6" />
            <span class="block md:hidden ml-2 text-sm">{item.text}</span>
          </SocialLink>
        ))
      }
    </div>
  </div>
</aside>
