---
import "@/styles/global.css";
import Header from "@/layouts/header.astro";
import Footer from "@/layouts/footer.astro";
import Info from "@/layouts/info.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-screen h-dvh overflow-hidden" data-filter="crt">
		<div
			class="2xl:max-w-7xl mx-auto h-full 2xl:border-x border-border/75 relative"
		>
			<Header />
			<main class="flex flex-col md:flex-row min-h-content h-content">
				<Info />
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
